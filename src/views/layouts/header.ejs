        <script>
          function actualizarFecha() {
            let fechaActual = new Date();
            // Días de la semana
            let diasSemana = ['Dom,', 'Lun,', 'Mar,', 'Mié,', 'Jue,', 'Vie,', 'Sáb,'];
            let diaSemana = diasSemana[fechaActual.getDay()];

            // Día del mes
            let diaMes = fechaActual.getDate();

            // Meses
            let meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'];
            let mes = meses[fechaActual.getMonth()];

            // Hora y minutos
            let horas = fechaActual.getHours();
            let minutos = fechaActual.getMinutes();

            // Convertir a formato AM/PM
            let amPm = horas >= 12 ? 'PM' : 'AM';
            horas = horas % 12;
            horas = horas ? horas : 12;

            // Formato: Domingo 2 de Julio de 2023 4:30PM
            let formatoFechaHora = diaSemana + ' ' + diaMes + ' de ' + mes  + ' ' + horas + ':' + (minutos < 10 ? '0' + minutos : minutos) + amPm;

            document.getElementById('fechaActualizada').textContent = formatoFechaHora;
          }

          // Actualizar la fecha cada segundo (1000 milisegundos)
          setInterval(actualizarFecha, 1000);

          // Ejecutar la función por primera vez para mostrar la fecha inicial
          actualizarFecha();
        </script>
      </span>
